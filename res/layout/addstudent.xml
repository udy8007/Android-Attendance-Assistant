<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/v6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.attendanceassistant.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Student"
        android:id="@+id/textView5"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="30dp"

        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Student Name"
        android:id="@+id/textView6"

        android:textColor="@android:color/white"
        android:layout_marginTop="29dp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/textView5"

        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=" "
        android:ems="10"
        android:id="@+id/se1"
        android:width="150dp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Register Number"
        android:id="@+id/textView7"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        android:paddingTop="15dp"
        android:layout_below="@+id/textView6"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/se2"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"


        android:layout_alignLeft="@+id/se1"
        android:layout_alignStart="@+id/se1"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Graduation"
        android:id="@+id/textView8"

        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/se2"
          />

    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Year"
        android:id="@+id/textView9"
        android:textStyle="bold"

        android:textColor="@android:color/white"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/as2"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address"

        android:textColor="@android:color/white"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingLeft="1dp"
        android:layout_alignBottom="@+id/se3"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/sbt1"

        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/se4"
        android:layout_alignEnd="@+id/se4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Parents Phone No"
        android:id="@+id/textView11"
        android:textStyle="bold|italic"
        android:paddingTop="10dp"
        android:paddingLeft="1dp"

        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/se4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/se3"
        android:layout_below="@+id/as2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         android:layout_alignLeft="@+id/se2"
        android:layout_alignStart="@+id/se2"
        android:textColor="@android:color/white" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/as1"
        android:spinnerMode="dialog"
        android:entries="@array/gra"
        android:layout_alignTop="@+id/textView8"

        android:layout_alignLeft="@+id/se2"
        android:layout_alignStart="@+id/se2" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/as2"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/as1"

        android:layout_alignLeft="@+id/se3"
        android:layout_alignStart="@+id/se3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/se4"
        android:layout_below="@+id/se3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:layout_alignLeft="@+id/se3"
        android:layout_alignStart="@+id/se3"
        android:textColor="@android:color/white" />
</RelativeLayout>
