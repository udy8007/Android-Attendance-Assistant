<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@drawable/nx2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dr Ambedkar Government Arts College"
        android:textSize="18dp"
        android:textStyle="bold|italic"

        android:id="@+id/textView2"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_dark"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="STUDENT ATTENDANCE"
        android:id="@+id/textViewabc"
        android:paddingTop="35dp"
        android:textStyle="bold|italic"

        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Here....."
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/animtext"
        android:paddingTop="10dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textViewabc"
        android:layout_centerHorizontal="true"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Name"
        android:id="@+id/textView38"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/animtext"
        android:layout_toStartOf="@+id/animtext"
        android:textStyle="bold"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=" "
        android:ems="10"
        android:id="@+id/editTextusername"
        android:width="150dp"
        android:layout_alignBottom="@+id/textView38"
        android:layout_alignStart="@+id/editTextpassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/textView39"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView38"
        android:layout_alignStart="@+id/textView38"
        android:textStyle="bold"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextpassword"
        android:layout_alignBottom="@+id/textView39"
        android:width="150dp"
        android:layout_alignEnd="@+id/textViewabc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/buttonlogin"
        android:layout_below="@+id/editTextpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/buttonlogin"
        android:layout_toRightOf="@+id/buttonlogin"
        android:layout_alignRight="@+id/editTextpassword"
        android:layout_alignEnd="@+id/editTextpassword"
        android:layout_alignBottom="@+id/buttonlogin" />

</RelativeLayout>
