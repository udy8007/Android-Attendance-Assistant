<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sas"
    tools:context="com.example.admin.attendanceassistant.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Take Attendance"
        android:id="@+id/mtk"
        android:textColor="@color/zxing_custom_result_view"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manual Mode"
        android:id="@+id/scan"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/mtk"
        android:layout_alignRight="@+id/mtk"
        android:layout_alignEnd="@+id/mtk"
        android:layout_alignLeft="@+id/mtk"
        android:layout_alignStart="@+id/mtk"
        android:background="@drawable/abc_textfield_search_default_mtrl_alpha" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Mode"
        android:id="@+id/qrbt"
        android:layout_below="@+id/scan"
        android:layout_alignLeft="@+id/scan"
        android:layout_alignStart="@+id/scan"
        android:layout_alignRight="@+id/scan"
        android:layout_alignEnd="@+id/scan"
        android:background="@drawable/abc_textfield_search_default_mtrl_alpha" />
</RelativeLayout>
