<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@drawable/v6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dr Ambedkar Government  Arts College"
        android:textSize="18dp"
        android:textStyle="bold|italic"

        android:id="@+id/textView2"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:typeface="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="STUDENT ATTENDANCE"
        android:id="@+id/textViewabc"
        android:paddingTop="18dp"
        android:textStyle="bold|italic"

        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/zxing_viewfinder_laser"
        android:layout_below="@+id/textView2"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Attendance"
        android:id="@+id/bt1"

        android:layout_marginTop="44dp"
        android:layout_below="@+id/textViewabc"
        android:layout_alignRight="@+id/textViewabc"
        android:layout_alignEnd="@+id/textViewabc"
        android:layout_alignLeft="@+id/textViewabc"
        android:layout_alignStart="@+id/textViewabc"
        android:background="@drawable/abc_textfield_search_default_mtrl_alpha"
        android:typeface="serif"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Attendance"
        android:id="@+id/bt2"
        android:background="@drawable/abc_textfield_search_default_mtrl_alpha"
        android:layout_below="@+id/bt1"

        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/textViewabc"
        android:layout_alignStart="@+id/textViewabc"
        android:layout_alignRight="@+id/bt1"
        android:layout_alignEnd="@+id/bt1"
        android:typeface="serif"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Students Profile"
        android:id="@+id/bt3"

        android:layout_marginTop="10dp"

        android:layout_below="@+id/bt2"
        android:layout_alignLeft="@+id/textViewabc"
        android:layout_alignStart="@+id/textViewabc"
        android:layout_alignRight="@+id/textViewabc"
        android:layout_alignEnd="@+id/textViewabc"
        android:background="@drawable/abc_textfield_search_default_mtrl_alpha"
        android:typeface="serif"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty profile"
        android:id="@+id/bt4"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/bt3"
        android:layout_alignLeft="@+id/bt3"
        android:layout_alignStart="@+id/bt3"
        android:layout_alignRight="@+id/bt3"
        android:layout_alignEnd="@+id/bt3"
        android:background="@drawable/abc_textfield_search_default_mtrl_alpha"
        android:typeface="serif"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Table"
        android:id="@+id/bt5"

        android:layout_below="@+id/bt4"
        android:layout_alignLeft="@+id/bt4"
        android:layout_alignStart="@+id/bt4"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/bt4"
        android:layout_alignEnd="@+id/bt4"
        android:background="@drawable/abc_textfield_search_default_mtrl_alpha"
        android:typeface="serif"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remainder"
        android:id="@+id/rmbtn"
        android:layout_below="@+id/bt5"
        android:layout_alignLeft="@+id/bt5"
        android:layout_alignStart="@+id/bt5"
        android:background="@drawable/abc_textfield_search_default_mtrl_alpha"
        android:layout_marginTop="10dp"
        android:typeface="serif"
        android:textColor="@android:color/white"
        android:layout_alignRight="@+id/bt5"
        android:layout_alignEnd="@+id/bt5" />

</RelativeLayout>
