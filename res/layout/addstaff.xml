<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yash"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.attendanceassistant.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Faculty"
        android:id="@+id/textView5"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Staff Name"
        android:textColor="@android:color/white"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"

        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=" "
        android:ems="10"
        android:id="@+id/se1"

        android:width="150dp"
        android:layout_above="@+id/se2"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Staff ID"
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:paddingTop="15dp"


        android:layout_above="@+id/textView8"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:inputType="number"
        android:ems="10"
        android:id="@+id/se2"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/se1"
        android:layout_alignStart="@+id/se1"
        android:width="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Department"
        android:id="@+id/textView8"

        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:paddingTop="20dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/se2"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=" "
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_below="@+id/se2"
        android:layout_alignLeft="@+id/se2"
        android:layout_alignStart="@+id/se2"
        android:width="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Major Subject"
        android:textStyle="bold"
        android:id="@+id/textView12"
        android:textColor="@android:color/white"
        android:paddingTop="20dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/textView8"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=" "
        android:ems="10"
        android:id="@+id/editText7"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:width="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address"
        android:id="@+id/textView13"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/editText7"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText8"
        android:width="150dp"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button7"

        android:layout_marginTop="41dp"
        android:layout_below="@+id/editText20"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone No"
        android:id="@+id/textView41"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingLeft="5dp"

        android:layout_below="@+id/textView13"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText20"
        android:layout_alignBottom="@+id/textView41"
        android:layout_alignLeft="@+id/editText8"
        android:layout_alignStart="@+id/editText8"
        android:width="150dp"
        android:inputType="number" />

</RelativeLayout>
